<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:LocalProduceMarketLocator.ViewModels"
             x:Class="LocalProduceMarketLocator.Views.HomePage"
             x:DataType="viewmodel:HomeViewModel"
             Title="Home"
             BackgroundColor="White"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="Auto,*,Auto">
        <Grid BackgroundColor="{StaticResource Green}" 
              Padding="20,15"
              RowDefinitions="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label Grid.Column="1" Text="Sustain Market" FontSize="20" FontAttributes="Bold" TextColor="White"
                   VerticalOptions="Center" HorizontalOptions="Center" />

            <Border Grid.Column="2" BackgroundColor="White" StrokeThickness="0" WidthRequest="40" HeightRequest="40">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>
                <Border.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToNotificationsCommand}" />
                </Border.GestureRecognizers>
                <Grid>
                    <Label Text="ðŸ””" FontSize="20" FontAttributes="Bold" TextColor="{StaticResource Green}" HorizontalOptions="Center" VerticalOptions="Center" />
                    <Border BackgroundColor="Red" StrokeThickness="0" HeightRequest="10" WidthRequest="10"
                            HorizontalOptions="End" VerticalOptions="Start" Margin="0,8,8,0"
                            IsVisible="{Binding HasUnreadNotifications}">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="5" />
                        </Border.StrokeShape>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <ScrollView Grid.Row="1">
            <VerticalStackLayout Padding="20" Spacing="30" VerticalOptions="Start">

                <Label Text="{Binding UserName, StringFormat='Welcome, {0}'}"
                       FontSize="24" FontAttributes="Bold" TextColor="{StaticResource Green}"
                       HorizontalOptions="Center" Margin="0,20,0,0" />

                <VerticalStackLayout Spacing="20" Margin="0,10,0,0">

                    <Border BackgroundColor="White" StrokeThickness="2" Stroke="{StaticResource Green}" Padding="20,25">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="15" />
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NavigateToSubmissionsCommand}"/>
                        </Border.GestureRecognizers>
                        <Grid ColumnDefinitions="Auto,*">
                            <Label Grid.Column="0" Text="ðŸ“„" FontSize="32" VerticalOptions="Center" Margin="0,0,15,0" />
                            <Label Grid.Column="1" Text="My Submissions" TextColor="{StaticResource Green}" FontSize="18" FontAttributes="Bold" VerticalOptions="Center"/>
                        </Grid>
                    </Border>

                    <Border BackgroundColor="White" StrokeThickness="2" Stroke="{StaticResource Green}" Padding="20,25">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="15" />
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NavigateToAddLocationCommand}"/>
                        </Border.GestureRecognizers>
                        <Grid ColumnDefinitions="Auto,*">
                            <Label Grid.Column="0" Text="ðŸ“" FontSize="32" VerticalOptions="Center" Margin="0,0,15,0" />
                            <Label Grid.Column="1" Text="+ Add Location" TextColor="{StaticResource Green}" FontSize="18" FontAttributes="Bold" VerticalOptions="Center"/>
                        </Grid>
                    </Border>

                    <Border BackgroundColor="White" StrokeThickness="2" Stroke="{StaticResource Green}" Padding="20,25">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="15" />
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NavigateToMapCommand}"/>
                        </Border.GestureRecognizers>
                        <Grid ColumnDefinitions="Auto,*">
                            <Label Grid.Column="0" Text="ðŸ—ºï¸" FontSize="32" VerticalOptions="Center" Margin="0,0,15,0" />
                            <Label Grid.Column="1" Text="View Map" TextColor="{StaticResource Green}" FontSize="18" FontAttributes="Bold" VerticalOptions="Center"/>
                        </Grid>
                    </Border>

                    <VerticalStackLayout Spacing="15" Margin="0,20,0,0">

                        <Button Text="Logout"
                                Command="{Binding LogoutCommand}"
                                BackgroundColor="#D32F2F"
                                TextColor="White"
                                FontSize="18" FontAttributes="Bold" CornerRadius="15" HeightRequest="60"
                                IsVisible="{Binding IsUserLoggedIn}" />

                        <Button Text="Register or Login"
                                Command="{Binding NavigateToAuthCommand}"
                                BackgroundColor="{StaticResource Green}"
                                TextColor="White"
                                FontSize="18" FontAttributes="Bold" CornerRadius="15" HeightRequest="60"
                                IsVisible="{Binding IsUserLoggedIn, Converter={StaticResource InverseBoolConverter}}" />
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>

        <Grid Grid.Row="2" BackgroundColor="White" Padding="0,10" RowDefinitions="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0" BackgroundColor="#E8F5E9" StrokeThickness="0" Margin="10,0,5,0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="10" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="5" Padding="10" HorizontalOptions="Center">
                    <Label Text="ðŸ " FontSize="24" HorizontalOptions="Center" />
                    <Label Text="Home" FontSize="12" FontAttributes="Bold" TextColor="{StaticResource Green}" HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Border>
            <VerticalStackLayout Grid.Column="1" Margin="5,0,10,0" Spacing="5" Padding="10" HorizontalOptions="Center" BackgroundColor="Transparent">
                <VerticalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding NavigateToMapCommand}" />
                </VerticalStackLayout.GestureRecognizers>
                <Label Text="ðŸ—ºï¸" FontSize="24" HorizontalOptions="Center" />
                <Label Text="Map" FontSize="12" TextColor="Gray" HorizontalOptions="Center" />
            </VerticalStackLayout>
        </Grid>
    </Grid>

</ContentPage>